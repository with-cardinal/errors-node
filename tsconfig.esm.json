{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "sourceMap": true,
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "outDir": "dist/esm",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**",
    "node_modules",
  ]
}